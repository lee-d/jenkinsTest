pipeline {
    agent any
    triggers {
        pollSCM 'H/5 * * * *'
        cron 'H H(0-5) * * *'
    }
    environment {
        SERVICE = 'foo'
    }
    stages {
        stage('Maven Build') {
            steps {
                sh "mvn -B clean verify -DskipTests"
                archiveArtifacts artifacts: 'target/*.jar'
                dependencyCheckPublisher pattern: 'target/dependency-check-report.*'

                script {
                    def analysis = new XmlSlurper().parse(new File("${workspace}/target/dependency-check-report.xml"))

                    def myDataMap = [:]
                    myDataMap['DependencySize'] = analysis.dependencies.dependency.size()
                    analysis.dependencies.dependency.each
                     {
                         fileName = it.fileName
                         myDataMap[fileName] = it.description
                     }

                    step([$class: 'InfluxDbPublisher', target: 'grafana', customPrefix: 'test1', customData: myDataMap])
                }
            }
        }
    }
}
