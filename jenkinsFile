pipeline {
    agent any
    triggers {
        pollSCM 'H/5 * * * *'
        cron 'H H(0-5) * * *'
    }
    environment {
        SERVICE = 'foo'
    }
    stages {
        stage('Maven Build') {
            steps {
                sh "mvn -B clean verify -DskipTests"
                archiveArtifacts artifacts: 'target/*.jar'
                dependencyCheckPublisher pattern: 'target/dependency-check-report.*'

                script {
                    def analysis = new XmlSlurper().parse(new File("target/dependency-check-report.xml"))

                    def myDataMap = [:]
                    myDataMap[analysis.projectInfo.name] = analysis.dependencies[0].dependency.fielName
                    myDataMap[analysis.projectInfo.name] = analysis.dependencies[1].dependency.fielName
                    step([$class: 'InfluxDbPublisher', target: 'grafana', customPrefix: test1, customDataMap: myDataMap])
                }
            }
        }
    }
}
