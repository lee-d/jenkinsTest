pipeline {
    agent any
    triggers {
        pollSCM 'H/5 * * * *'
        cron 'H H(0-5) * * *'
    }
    environment {
        SERVICE = 'foo'
    }
    stages {
        stage('Maven Build') {
            steps {
                sh "mvn -B clean verify -DskipTests"
                dependencyCheckPublisher pattern: 'target/*.jar'
                dependencyCheckPublisher pattern: 'target/dependency-check-report.*'

                script {
                    step([$class: 'InfluxDbPublisher', target: 'grafana', customPrefix: null, customDataMap: null])
                }
            }
        }
    }
}
