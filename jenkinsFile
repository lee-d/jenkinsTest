@NonCPS
def getVulnerabilityReport() {
    def analysis = new XmlSlurper().parse("${workspace}/target/dependency-check-report.xml")

    def myDataMap = [:]
    def myCustomDataMap = [:]

    analysis.dependencies.dependency.each
     {
         if (it.vulnerabilities.vulnerability.size()) {
            def isHigh = false
             it.vulnerabilities.vulnerability.each {
               isHigh = isHigh || it.severity.text().equals('High')
             }
             if (isHigh) {
               fileName = it.fileName.text()
               myDataMap[fileName] = it.vulnerabilities.vulnerability.size()
             }
         }
     }

    myCustomDataMap['dep-check-report'] = myDataMap
    return myCustomDataMap
}

pipeline {
    agent any
    triggers {
        pollSCM 'H/5 * * * *'
        cron 'H H(0-5) * * *'
    }
    environment {
        SERVICE = 'foo'
    }
    stages {
        stage('Maven Build') {
            steps {
                sh "mvn -B clean verify -DskipTests"
                archiveArtifacts artifacts: 'target/*.jar'
                dependencyCheckPublisher pattern: 'target/dependency-check-report.*'

                script {
                    def result = getVulnerabilityReport()
                    step([$class: 'InfluxDbPublisher', target: 'grafana', customPrefix: null, customDataMap: result])
                }
            }
        }
    }
}
